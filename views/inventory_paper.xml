<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="inventory_paper_view_tree" model="ir.ui.view">
            <field name="name">inventory_paper_view_tree</field>
            <field name="model">inventory.paper</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="paper_count"/>
                </tree>
            </field>
        </record>

        <record id="inventory_paper_view_form" model="ir.ui.view">
            <field name="name">inventory_paper_view_form</field>
            <field name="model">inventory.paper</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nhập tờ trình..."/>
                            </h1>
                        </div>
                        <group>
                            <field name="date" />
                            <field name="paper_count"/>
                        </group>
                        <notebook>
                            <page string="Phiếu mua sắm chờ duyệt">
                                <field name="paper_ids" widget="many2many">
                                    <tree>
                                        <field name="name" />
                                        <field name="location_id" />
                                        <field name="location_dest_id"/>
                                        <field name="origin"/>
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="inventory_paper_action_id" model="ir.actions.act_window"> 
            <field name="name">Tờ trình nhập kho</field>
            <field name="res_model">inventory.paper</field>    
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>